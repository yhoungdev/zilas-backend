generator client {
  provider = "prisma-client-js"
}

type UsersStatus {
  status String
}

enum UsersEnum {
  PENDING
  VERIFIED
}

model Users {
  id        String   @id @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
